<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>stateless</display-name>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>managedbeans.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServletContextListener</servlet-name>
        <servlet-class>managedbeans.Log4jInitServlet</servlet-class>
        <init-param>
            <param-name>log4j-properties-location</param-name>
            <param-value>WEB-INF/classes/log4j.properties</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>managedbeans.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PdfDownloadController</servlet-name>
        <servlet-class>managedbeans.PdfDownloadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PdfDownloadController</servlet-name>
        <url-pattern>/pdfservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PdfMallaDownloadController</servlet-name>
        <servlet-class>managedbeans.PdfMallaDownloadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PdfMallaDownloadController</servlet-name>
        <url-pattern>/pdfmallaservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletContextListener</servlet-name>
        <url-pattern>/ServletContextListener</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/ldap/403.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>Resources</display-name>
        <web-resource-collection>
            <web-resource-name>Resource</web-resource-name>
            <description/>
            <url-pattern>/javax.faces.resource/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <display-name>ParaTodos</display-name>
        <web-resource-collection>
            <web-resource-name>Index</web-resource-name>
            <description/>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Alumno</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>diinfRealm</realm-name>
        <form-login-config>
            <form-login-page>/ldap/login.xhtml</form-login-page>
            <form-error-page>/ldap/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Administrador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Alumno</role-name>
    </security-role>
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>auto</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
</web-app>
